<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.BookDao">
    <resultMap type="Book" id="bookResultMap" >
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="num" column="number"/>
        <result property="detail" column="detail"/>
    </resultMap>
    <insert id="addBook" parameterType="Book">
        INSERT INTO book(id,name,number,detail) VALUE (#{id},#{name}, #{num}, #{detail})
    </insert>

    <delete id="deleteBookById" parameterType="int">
        DELETE FROM book WHERE id=#{id}
    </delete>

    <update id="updateBook" parameterType="Book">
        UPDATE book
        SET NAME = #{name},NUMBER = #{num},detail = #{detail}
        WHERE  id = #{id}
    </update>

    <select id="queryById" resultType="Book" parameterType="int">
        SELECT id,name,number,detail
        FROM book
        WHERE id=#{id}
    </select>
    <select id="queryAllBook" resultMap="bookResultMap">
        SELECT id,name,number,detail
        FROM book
    </select>
    <select id="findList" resultMap="bookResultMap">
        SELECT id,name,number,detail
        FROM book


    </select>
    <select id="getTotal" parameterType="Map"  resultType="Integer">
        SELECT count(id) FROM book

    </select>

</mapper>